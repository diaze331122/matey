<div class="card bg-primary text-light">
    <div class="card-body">
        <div class="row">
            <h4>Average Number of Visits Per Day For the Month Of <%= Time.new.strftime("%B") %></h4>
        </div>
        <div class="row">
            <table class="table table-hover table-borderless table-sm">
                <thead class="table-dark">
                    <tr>
                        <th>Day</th>
                        <th>Average</th>
                    </tr>
                </thead>
                <tbody class="text-light">
                <% @day_visits.each do |day| %>
                    <tr>
                        <td><%= day['day_of_week'] %></td>
                        <td><%= day['num_visits_per_day'] %></td>
                    </tr>
                <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>